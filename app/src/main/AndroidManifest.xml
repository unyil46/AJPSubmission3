<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.djafa.submission3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Submission1">
        <activity
            android:name="org.djafa.submission3.ui.detail.DetailTvshowsActivity"
            android:label="@string/title_activity_detail_tv_show"
            android:parentActivityName="org.djafa.submission3.ui.home.HomeActivity"
            android:theme="@style/Theme.Submission1.NoActionBar">
            <meta-data
                android:name="android.support.PARRENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name="org.djafa.submission3.ui.detail.DetailMoviesActivity"
            android:label="@string/title_activity_detail_movies"
            android:parentActivityName="org.djafa.submission3.ui.home.HomeActivity"
            android:theme="@style/Theme.Submission1.NoActionBar">
            <meta-data
                android:name="android.support.PARRENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity android:name="org.djafa.submission3.ui.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>